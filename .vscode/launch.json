{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "dev",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENVIRONMENT=dev",
        "--dart-define=API_KEY=your_dev_api_key_here",
        "--dart-define=APP_NAME=Movie App Dev"
      ]
    },
    {
      "name": "staging",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENVIRONMENT=staging",
        "--dart-define=API_KEY=your_staging_api_key_here", 
        "--dart-define=APP_NAME=Movie App Staging"
      ]
    },
    {
      "name": "production",
      "request": "launch",
      "type": "dart", 
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENVIRONMENT=prod",
        "--dart-define=API_KEY=your_prod_api_key_here",
        "--dart-define=APP_NAME=Movie App"
      ]
    }
  ]
}